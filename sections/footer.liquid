<footer class="color- {{ section.settings.color_scheme }} py-10 border-t-2 border-light2">
  {%- if section.blocks.size > 0 or section.settings.newsletter_enable or section.settings.show_social -%}
    <div class="container space-y-8">
      {%- if section.blocks.size > 0 -%}
        {%- liquid
          if section.blocks.size == 9
            assign footer_grid_class = 'md:grid-cols-3'
          elsif section.blocks.size > 6
            assign footer_grid_class = 'md:grid-cols-4'
          elsif section.blocks.size == 6
            assign footer_grid_class = 'md:grid-cols-3'
          elsif section.blocks.size >= 4 
            assign footer_grid_class = 'md:grid-cols-4'
          elsif section.blocks.size > 2 
            assign footer_grid_class = 'md:grid-cols-3'
          elsif section.blocks.size == 2 
            assign footer_grid_class = 'md:grid-cols-2'
          elsif section.blocks.size == 1 
            assign footer_grid_class = 'md:grid-cols-1'
          endif
        -%}        
      <div class="grid grid-cols-1 {{ footer_grid_class }} gap-4">
        {%- for block in section.blocks -%}
          {%- liquid  
            if block.settings.image_column_span == 1
              assign image_column_span = 'md:col-span-1'
            elsif block.settings.image_column_span == 2
              assign image_column_span = 'md:col-span-2'
            elsif block.settings.image_column_span == 3
              assign image_column_span = 'md:col-span-3'
            elsif block.settings.image_column_span == 4
              assign image_column_span = 'md:col-span-4'
            endif

            if block.settings.text_column_span == 1
              assign text_column_span = 'md:col-span-1'
            elsif block.settings.text_column_span == 2
              assign text_column_span = 'md:col-span-2'
            elsif block.settings.text_column_span == 3
              assign text_column_span = 'md:col-span-3'
            elsif block.settings.text_column_span == 4
              assign text_column_span = 'md:col-span-4'
            endif

            if block.settings.link_list_column_span == 1
              assign link_list_column_span = 'md:col-span-1'
            elsif block.settings.link_list_column_span == 2
              assign link_list_column_span = 'md:col-span-2'
            elsif block.settings.link_list_column_span == 3
              assign link_list_column_span = 'md:col-span-3'
            elsif block.settings.link_list_column_span == 4
              assign link_list_column_span = 'md:col-span-4'
            endif
          -%}
          {% if block.type == 'image' %}
            <div class="{{ image_column_span }}" {{ block.shopify_attributes }}>
          {% elsif block.type == 'text' %} 
            <div class="{{ text_column_span }}" {{ block.shopify_attributes }}>
          {% elsif block.type == 'link_list' %} 
            <div class="{{ link_list_column_span }}" {{ block.shopify_attributes }}>
          {% endif %}
            {%- if block.settings.heading != blank -%}
              <h2 class="text-body1">{{- block.settings.heading | escape -}}</h2>
            {%- endif -%}

            {%- case block.type -%}
              {%- when 'text' -%}
                <div class="text-body1 mt-3">
                  {{ block.settings.subtext }}
                </div>
              {%- when 'link_list' -%}
                {%- if block.settings.menu != blank and block.settings.heading != blank -%}
                  <ul class="">
                    {%- for link in block.settings.menu.links -%}
                      <li class="">
                        <a href="{{ link.url }}" class="text-body1 {% if link.active %} underline{% endif %}">
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              {%- when 'image' -%}
                <div class="flex justify-center md:justify-{{ block.settings.alignment }}">
                  {%- if block.settings.image != blank -%}
                    {%- assign image_size = block.settings.image_width | append: 'x' -%}
                    <img
                      srcset= "{{ block.settings.image | img_url: image_size }}, {{ block.settings.image | img_url: image_size, scale: 2 }} 2x"
                      src="{{ block.settings.image | img_url: '400x' }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      style="max-width: min(100%, {{ block.settings.image_width }}px);"
                      class="object-contain"
                    >
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  {%- endif -%}
                </div>
              {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
